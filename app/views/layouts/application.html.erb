<!--[if gt IE 8]><!--> <html ng_app class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <title><%= content_for?(:title) ? yield(:title) : "Find your data" %></title>
    <meta name="description" content="This is the Meta Description">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-title" content="Short Name">
    <meta name="application-name" content="Short Name">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon-precomposed" href="/images/webclips/nd-webclip-57.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/images/webclips/nd-webclip-72.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/images/webclips/nd-webclip-114.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/images/webclips/nd-webclip-144.png">
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
    <script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
    <%= javascript_include_tag "application" %>
  </head>

  <body>

<!--     <nav class="skip-links">
      <ul>
        <li><a href="#content" accesskey="C" title="Skip to content = C">Skip To Content</a></li>
        <li><a href="#nav" accesskey="S" title="Skip to navigation = S">Skip To Navigation</a></li>
      </ul>
    </nav> -->

    <header id="header" role="banner" class="site-header">
      <!-- <div class="beta_banner">
        <%= image_tag "beta_corner_banner.png" %>
      </div> -->
      <nav class="brandbar theme-bb-lightgray">
        <div class="row">
          <ul class="large-12 columns">
            <li class="dept-nd"><a href="http://www.nd.edu">University <i>of</i> Notre Dame</a></li>
            <li class="dept dept-ooit"><a href="http://oit.nd.edu">Office <i>of</i> Information Technologies</a></li>
           </ul>
        </div>
      </nav>


      <%= render "shared/top_bar" %>
    </header>

    <main id="content" class="site-content" role="main">
      <% if request.path == "/" %>
        <div class="row">
          <div class="full main-image">

            <% unless current_user %>
              <div class="row">
                <div class="large-5 medium-7 medium-centered columns">
                  <%= link_to "LOG IN", login_path, class: "button round large secondary loginButton" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="large-12 columns main-link-menu">
            <div class="large-12 columns main-page-search-links">
              <h1 class="main-page-search-links-header">What are you searching for?</h1>
            </div>

            <a href="/browse/report"><div class="medium-4 columns report-icon"></div></a>
            <a href="/browse/dataset"><div class="medium-4 columns dataset-icon"></div></a>
            <a href="/browse/term"><div class="medium-4 columns data-gov-icon"></div></a>

            <div class="small-4 columns"><h2 class="main-page-search-links-header">Reports</h1></div>
            <div class="small-4 columns"><h2 class="main-page-search-links-header">Datasets</h1></div>
            <div class="small-4 columns"><h2 class="main-page-search-links-header">Glossary</h1></div>
          </div>
        </div>


      <% end %>
      <%= yield %>
    </main>


    <footer id="footer" class="site-footer row" role="contentinfo">
      <div class="large-12 columns">

        <div class="footer-inner">
          <div class="vcard">
            <p class="copyright url fn org">
              <a href="http://www.nd.edu/copyright/">Copyright</a> &copy; <%= Time.now.year %>
              <a href="http://www.nd.edu" class="org">University of Notre Dame</a>
            </p>
            <p class="contact-info adr">
              <span class="address"><span class="street-address">200 OIT Center</span>, <span class="locality">Notre Dame</span>, <span class="region" title="Indiana">IN</span> <span class="postal-code">46556</span></span>
              <span class="tel"><span class="type">Phone</span> 574-631-7770</span>
              <span class="email"><a href="mailto:ES-DECISION-SUPPORT@LISTSERV.ND.EDU">ES-DECISION-SUPPORT@LISTSERV.ND.EDU</a></span>
            </p>
            <a href="http://www.nd.edu" class="ndmark"><img src="//www.nd.edu/assets/images/marks/white/ndmark300.png" alt="University of Notre Dame"></a>
          </div>
        </div>
      </div>
    </footer>


  </body>
</html>
