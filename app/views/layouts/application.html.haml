!!!
%head
  %meta{:charset => "utf-8"}/
  %title= content_for?(:title) ? yield(:title) : "Business Intelligence Portal"
  %meta{:content => "This is the Meta Description", :name => "description"}
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %meta{:content => "Short Name", :name => "apple-mobile-web-app-title"}
  %meta{:content => "Short Name", :name => "application-name"}
  %link{:href => "/favicon.ico", :rel => "shortcut icon"}
  %link{:href => "/images/webclips/nd-webclip-57.png", :rel => "apple-touch-icon-precomposed"}
  %link{:href => "/images/webclips/nd-webclip-72.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
  %link{:href => "/images/webclips/nd-webclip-114.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
  %link{:href => "/images/webclips/nd-webclip-144.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}
  = stylesheet_link_tag    "application"
  = javascript_include_tag "vendor/modernizr"
  = csrf_meta_tags
  %script{:src => "//tinymce.cachefly.net/4.1/tinymce.min.js"}
  = javascript_include_tag "application"

%body

  %header
    %nav.brandbar.theme-bb-transparent
      %ul.title-area
        %li.dept-nd
          %a{:href => "http://www.nd.edu"}
            University
            %i of
            Notre Dame
        %li.dept.dept-ooit
          %a{:href => "http://oit.nd.edu"}
            Office
            %i of
            Information Technologies
    = render "shared/top_bar"


  %main.site-content{:role => "main"}
    - if request.path == "/"
      .row
        .small-4.columns
          %h1 Welcome to the BI PORTAL
        .small-8.columns
          
        - unless current_user
          .row
            .large-5.medium-7.medium-centered.columns
              = link_to "LOG IN", login_path, class: "button expand"
    = yield









  %footer.site-footer{:role => "contentinfo"}
    .footer-inner
      .vcard
        %p.copyright.url.fn.org
          %a{:href => "http://www.nd.edu/copyright/"} Copyright
          \&copy; #{Time.now.year}
          %a.org{:href => "http://www.nd.edu"} University of Notre Dame
        %p.contact-info.adr
          %span.address
            %span.street-address> 200 OIT Center
            ,
            = succeed "," do
              %span.locality Notre Dame
            %span.region{:title => "Indiana"} IN
            %span.postal-code 46556
          %span.tel
            %span.type Phone
            574-631-7770
          %span.email
            %a{:href => "mailto:ES-DECISION-SUPPORT@LISTSERV.ND.EDU"} ES-DECISION-SUPPORT@LISTSERV.ND.EDU
        %a.ndmark{:href => "http://www.nd.edu"}
          %img{:alt => "University of Notre Dame", :src => "//www.nd.edu/assets/images/marks/black/ndmark300.png"}/
